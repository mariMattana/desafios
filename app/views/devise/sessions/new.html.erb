<div class="container sign-in-form">
  <div class="form-style-3">
    <form>
      <fieldset>
        <h2 class="text-center">Entrar com</h2>
        <div class="row">
          <div class="col-md-4" >
            <a class="btn btn-block btn-social btn-facebook">
              <span class="fa fa-facebook"></span>Facebook
            </a>
            <a class="btn btn-block btn-social btn-google">
              <span class="fa fa-google"></span> Gmail
            </a>
          </div>
          <div class="col-md-8" style="border-left:1px solid #ccc;">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true %>
                <%= f.input :password, required: false %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Entrar" %>
              </div>
            <% end %>
            <%= render "devise/shared/forgot_password" %>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
